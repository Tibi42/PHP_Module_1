{% extends 'base.html.twig' %}

{% block title %}Module 1 PHP SYMFONY{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ stagiaire_name }} {{ stagiaire_nom }}! ✅</h1>
    <blockquote>
        <p>Vous avez {{ stagiaire_age }} ans</p>
        <p>Vous êtes de sexe {{ stagiaire_sexe }}</p>
        <p>{{ stagiaire_description }}</p>
        <ul>
            <li>{{ stagiaire_nom }}</li>
            <li>{{ stagiaire_age }}</li>
            <li>{{ stagiaire_sexe }}</li>
        </ul>
    </blockquote>
    <pre>
        {{ dump(hobby) }}
    </pre>
    <pre>
        {{ (couleur) }}
    </pre>
</div>
{% endblock %}
